<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <layer-list>
            <item android:right="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#F9A825" />
                </shape>
            </item>
            <item android:bottom="4dp" android:left="4dp">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dp" android:color="#F9A825" />
            <gradient android:angle="-90" android:startColor="#FBC02D" android:endColor="#F9A825" />
        </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FFCA28" />
            <solid android:color="#FFCA28"/>
        </shape>
    </item>

    <item>
        <layer-list>
            <item android:right="5dp" android:top="5dp">
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="#E0E0E0" />
                </shape>
            </item>
            <item android:bottom="4dp" android:left="4dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#E0E0E0" android:startColor="#F5F5F5" />
                    <stroke android:width="1dp" android:color="#E0E0E0" />
                    <corners android:radius="4dp" />
                    <padding android:bottom="12dp" android:left="12dp"
                        android:right="10dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>